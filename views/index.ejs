<div class="author">
    <h1 class="author__heading"> I am Manav</h1>
    <p class="author__body">WEB dev and estore owner</p>
</div>

<img src="/img/hero-image.webp" alt="" class="hero-image" width="981" />

<section class="articles">
    <h2 class="articles__heading">Lastest Pages</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span> <%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage  %>" class="pagination">View Older Posts</a>
    <% } %>

    
</section>
